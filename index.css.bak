/* --------Variables--------- */
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");
@import url("https://fonts.googleapis.com/css2?family=EB+Garamond:ital@1&family=Roboto:wght@300&family=Square+Peg&display=swap");
:root {
  --main-color: #e02f6b;
  --blue: #0000ff;
  --blue-dark: #18293c;
  --orange: #ffa500;
  --green-yellow: #cdcc03;
  --pink-light: #efa2b4;
  --cyn-light: #aef1ee;
  --white: #fff;
  --white-alpha-40: rgba(255, 255, 255, 0.4);
  --white-alpha-25: rgba(255, 255, 255, 0.25);
  --backdrop-filter-blur: blur(5px);
}

/* global setting  */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  height: auto;
  overflow-x: hidden;
}
.container {
  /* background-color: red; */
  text-align: center;
}
.header {
  position: relative;
}
.bg-img {
  content: "";
  vertical-align: middle;
  background-image: linear-gradient(
      38deg,
      rgba(255, 255, 255, 0.9) 50%,
      transparent 50%
    ),
    url(tiku01.jpg);
  background-size: 100% 100%;
  padding: 130px;
  position: relative;
  box-shadow: 0 10px 20px -6px #000;
  position: relative;
}
.home-text {
  position: absolute;
  background-imge: linear-gradient(rgba(0, 0, 100, 0.6), rgba(0, 0, 100, 0.6));
  top: 35px;
  left: 20px;
  text-transform: capitalize;
  color: var(--main-color);
  font-size: 24px;
}
h1 {
  font-size: 34px;
  font-family: "Times New Roman", Times, serif;
  font-weight: 600;
}
p {
  position: relative;
  left: 60px;
  top: 70px;
  color: #8878c3;
  font-family: poppins, sans-serif;
  font-size: 19px;
  font-weight: 600;
}
.search {
  position: relative;
  left: 20px;
  top: 60px;
}
.search-box {
  outline: none;
  border-radius: 10px;
  padding: 0 10px;
  margin: 0 40px;
  width: 100%;
  border: 1px solid var(--main-color);
}
.search-box:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  transition: width 0.5s ease-in-out;
}
.search-box:hover {
  border: 2px solid var(--main-color);
}
.search-box::placeholder {
  color: var(--main-color);
  text-transform: capitalize;
  font-size: 14px;
  font-weight: 500;
}
a {
  text-decoration: none;
}
.btn {
  line-height: 1.5;
  background-color: var(--white-alpha-25);
  border: 1px solid var(--white-alpha-40);
  padding: 10px 28px;
  display: inline-block;
  border-radius: 30px;
  color: yellow;
  font-weight: 600;
  text-transform: capitalize;
  font-family: inherit;
  font-size: 18px;
  cursor: pointer;
  user-select: non;
  position: relative;
  overflow: hidden;
  vertical-align: middle;
  transition: color 0.3s ease;
}
.btn::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 0%;
  background-color: var(--main-color);
  z-index: -1;
  transition: width 0.3s ease;
}
.btn:hover::before {
  width: 100%;
}
.btn:hover {
  color: var(--white);
}
.login-button {
  position: absolute;
  right: 80px;
  top: 20px;
  font-family: inherit;
  user-select: none;
  z-index: 1;
}
.col-lg-3 {
  margin: 50px 0;
}
.card {
  position: relative;
  width: 300px;
  height: 190px;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
  padding: 30px 50px;
  margin: 0 10px;
  transition: 0.3s ease-out;
  border-radius: 10px;
  cursor: pointer;
  background-color: #fff;
}
.card:hover {
  height: 230px;
}
.img-box {
  position: relative;
  width: 100%;
  height: 100%;
  transform: translateY(-60px);
  z-index: 1;
}

img {
  width: 100%;
  border-radius: 10px;
  user-select: none;
}
h3 {
  text-align: center;
  text-transform: capitalize;
  color: var(--main-color);
  padding: 10px 20px;
  font-family: inherit;
  font-size: 20px;
  font-weight: 600;
}
.content {
  padding: 10px 20px;
  text-align: center;
  text-transform: capitalize;
  transform: translateY(-200px);
  transition: 0.3s;
  opacity: 0;
  user-select: none;
}
.card:hover h3 {
  display: none;
}
.card:hover .content {
  opacity: 1;
  transform: translateY(-10px);
}
.card h2 {
  color: var(--main-color);
  font-family: inherit;
  padding: 10px 0;
  font-size: 24px;
  font-weight: 600;
}
.card h5 {
  color: var(--blue-dark);
  text-align: center;
  font-size: 12px;
  font-weight: 600;
}
.all-in-one {
  border: 1px solid var(--white-alpha-40);
  margin: 10px 0;
  border-radius: 20px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
}
.puri-aloo {
  margin: 0px 0;
  height: 50vh;
  background-color: var(--white-alpha-40);
  /* box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5); */
  border-radius: 10px;
}
.img-puri {
  width: 20%;
  position: absolute;
  transform: translateX(-500px);
  margin: 70px 0;
  filter: drop-shadow(10px 10px 10px rgba(0, 0, 0, 0.6));
}
.discount {
  margin: 70px 0;
  padding: 0;
  position: absolute;
  transform: translateX(700px);
}
.discount a {
  text-decoration: none;
  color: var(--main-color);
}
.title-text {
  margin: 0;
  font-size: 38px;
  text-transform: capitalize;
  font-size: 52px;
  font-weight: 600;
  font-family: "Square Peg", cursive;
}
.title-description {
  font-size: 32px;
  text-transform: capitalize;
  font-family: "Square Peg", cursive;
  font-weight: 500;
}
.abc {
  background-color: var(--white-alpha-25);
  height: 60vh;
  margin-bottom: 30px;
  /* border: 1px solid var(--blue-dark); */
  border-radius: 20px;
}
.indian-food {
  height: 50vh;
  opacity: 99;
  margin: 0;
}
.col-lg-8 {
  position: relative;
}
.h3text {
  margin-top: 100px;
  padding-top: 40px;
  font-size: 52px;
  font-weight: 600;
  font-family: "Square Peg", cursive;
  cursor: pointer;
}
hr {
  width: 75%;
  margin-left: 80px;
}
h4 {
  font-size: 36px;
  font-weight: 500;
  font-family: "Square Peg", cursive;
  color: var(--blue-dark);
  cursor: pointer;
}
.indian-cook {
  float: left;
  margin: 45px 0;
  width: 70%;
  height: 40vh;
  cursor: pointer;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
}
.container-fluid {
  height: 40vh;
  background-color: #0077be;
}
.yu_12 {
  text-transform: capitalize;
  color: #fff;
  font-family: "Roboto", sans-serif;
  font-size: 18px;
  font-weight: 600;
  position:relative;
}
 p::after {
            content: ' hello';
            display: block;
            margin: 0 auto;
            width: 20%;
            height: 10px;
            border-bottom: 5px solid #fff;
        }
.yu_123 {
  text-transform: capitalize;
  color: #fff;
  font-family: "Roboto", sans-serif;
  font-size: 14px;
}
